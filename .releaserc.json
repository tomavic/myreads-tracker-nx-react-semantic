{
  "branches": [
    { "name": "main" },
    { "name": "next", "channel": "next" },
    { "name": "beta", "channel": "beta", "prerelease": true }
  ],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING"]
        },
        "releaseRules": [
          { "type": "breaking", "release": "major" },
          { "type": "docs", "release": "patch" },
          { "type": "refactor", "release": "patch" },
          { "type": "style", "release": "patch" },
          { "type": "test", "release": "patch" },
          { "type": "ci", "release": "patch" },
          { "type": "chore", "release": "patch" }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "parserOpts": {
          "noteKeywords": ["BREAKING CHANGE", "BREAKING CHANGES", "BREAKING"]
        },
        "preset": "conventionalcommits",
        "header": "Books Tracker CHANGELOG",
        "presetConfig": {
          "types": [
            {
              "type": "breaking",
              "section": "â— Breaking â—",
              "hidden": false
            },
            { "type": "feat", "section": "âœ¨ Feature", "hidden": false },
            { "type": "fix", "section": "ğŸ› Bugfix", "hidden": false },
            { "type": "docs", "section": "ğŸ“  Documentation", "hidden": false },
            {
              "type": "chore",
              "section": "ğŸ”¨  Misc.",
              "hidden": false
            },
            {
              "type": "ci",
              "section": "ğŸ“¦ï¸ Build and CI",
              "hidden": false
            },
            {
              "type": "refactor",
              "section": "âš¡ï¸ Code Performance",
              "hidden": false
            },
            {
              "type": "test",
              "section": "ğŸ§ª Code Test",
              "hidden": false
            },
            {
              "type": "style",
              "section": "ğŸ’„ Design",
              "hidden": false
            },
            { "type": "hotfix", "section": "ğŸ”¥ Hotfix ğŸ”¥", "hidden": false }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["dist/assets/**"],
        "message": "build: ğŸš€ ${nextRelease.gitTag} has been released [skip ci] \n\n${nextRelease.notes}"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": ["dist/assets/**"]
      }
    ]
  ]
}
